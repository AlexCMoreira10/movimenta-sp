<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

  <style>
    /* Tema claro */
    .light-mode {
      background-color: #f5f5f5;
      color: #121212;
    }
    .light-mode .navbar,
    .light-mode .bg-dark,
    .light-mode .collapse > div {
      background-color: #e9e9e9 !important;
    }
    .light-mode .nav-link {
      color: #333 !important;
    }
    .light-mode .nav-link.active {
      font-weight: 600;
      color: #007bff !important;
    }

    /* Tema escuro */
    .dark-mode {
      background-color: #121212;
      color: #eee;
    }
    .dark-mode .navbar,
    .dark-mode .bg-dark,
    .dark-mode .collapse > div {
      background-color: #222 !important;
    }
    .dark-mode .nav-link {
      color: #ccc !important;
    }
    .dark-mode .nav-link.active {
      font-weight: 600;
      color: #0d6efd !important;
    }

    main {
      min-height: 80vh;
      padding: 1.5rem;
    }

    #darkModeToggleContainer {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
      user-select: none;
      margin-top: 1rem;
    }
    #darkModeToggle {
      cursor: pointer;
      width: 40px;
      height: 20px;
      position: relative;
      appearance: none;
      background: #c6c6c6;
      outline: none;
      border-radius: 20px;
      transition: background 0.3s;
    }
    #darkModeToggle:checked {
      background: #4f4f4f;
    }
    #darkModeToggle::before {
      content: "";
      position: absolute;
      width: 18px;
      height: 18px;
      border-radius: 50%;
      top: 1px;
      left: 1px;
      background: white;
      transition: 0.3s;
    }
    #darkModeToggle:checked::before {
      left: 21px;
    }
    #themeIcon {
      font-size: 1.3rem;
      color: #ffd700;
      transition: color 0.3s;
    }
    .dark-mode #themeIcon {
      color: #bbb;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Alternar navegação">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

  <!-- Menu colapsável -->
  <div class="collapse" id="navbarToggleExternalContent">
    <div class="bg-dark p-4">
      <h5 class="text-white">Menu</h5>
      <ul class="nav nav-underline flex-column">
        <li class="nav-item">
          <a class="nav-link" href="PaginaInicial">Início</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/Relatar">
            <i class="bi bi-exclamation-circle-fill me-1"></i> Relatar Problema
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/RotasDoBanco">Lista Ônibus Capelinha</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="PaginaRota.html">Rotas de Ônibus</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="horarios.html">Horários</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="olho-vivo.html">Câmeras Olho Vivo</a>
        </li>
      </ul>

      <!-- Toggle Modo Escuro/Claro -->
      <label id="darkModeToggleContainer" for="darkModeToggle" title="Alternar modo claro/escuro">
        <input class="form-check-input" type="checkbox" id="darkModeToggle" />
        <i id="themeIcon" class="fa-solid fa-sun"></i>
        <span class="text-white">Modo Escuro</span>
      </label>
    </div>
  </div>

  <main>
    {{{body}}}
  </main>

  <!-- Bootstrap JS 5.3 (corrigido e com Popper incluso) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Script para alternar modo claro/escuro -->
  <script>
    const toggle = document.getElementById('darkModeToggle');
    const body = document.body;
    const themeIcon = document.getElementById('themeIcon');

    function setTheme(theme) {
      if (theme === 'light') {
        body.classList.add('light-mode');
        body.classList.remove('dark-mode');
        themeIcon.classList.remove('fa-moon');
        themeIcon.classList.add('fa-sun');
      } else {
        body.classList.add('dark-mode');
        body.classList.remove('light-mode');
        themeIcon.classList.remove('fa-sun');
        themeIcon.classList.add('fa-moon');
      }
      localStorage.setItem('theme', theme);
    }

    // Carrega tema salvo
    const savedTheme = localStorage.getItem('theme') || 'dark';
    setTheme(savedTheme);
    toggle.checked = savedTheme === 'light';

    // Escuta alterações no toggle
    toggle.addEventListener('change', function () {
      if (this.checked) {
        setTheme('light');
      } else {
        setTheme('dark');
      }
    });
  </script>
</body>
</html>
