<style>
  /* Estilo adicional para o dark mode */
  .dark-mode .bg-body-secondary {
    background-color: #2c2f33 !important;
    border-color: #444 !important;
  }

  .dark-mode .text-light-emphasis {
    color: #ccc !important;
  }
</style>

<div class="container my-4">
  <h2 class="text-center mb-4">Lista de Rotas</h2>

  {{#if rotas.length}}
    <ul class="list-unstyled">
      {{#each rotas}}
        <li class="bg-body-secondary border rounded p-3 mb-3 shadow-sm">
          <p class="mb-1 fs-5 fw-semibold text-light-emphasis">
            <strong>Nome da Rota:</strong> {{nome_rota}}
          </p>
          <p class="mb-0 text-light-emphasis">
            <strong>Descrição:</strong> {{descricao}}
          </p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p class="text-muted text-center">Nenhuma rota encontrada.</p>
  {{/if}}
</div>
