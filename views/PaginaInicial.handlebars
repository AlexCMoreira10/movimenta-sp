<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Inicial - Transporte Público</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

    <!-- Estilo personalizado -->
    <style>
        body {
            background-color: #121212;
            color: #f1f1f1;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar, .bg-dark {
            background-color: #1c1c1c !important;
        }

        .nav-link {
            color: #cfcfcf !important;
        }

        .nav-link:hover {
            color: #1e90ff !important;
        }

        /* Cards atualizados - mais claros e com animação */
        .card {
            border: none;
            background-color: #2f2f2f;
            color: #f5f5f5;
            box-shadow: 0 0 16px rgba(0, 0, 0, 0.4);
            border-radius: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.6);
        }

        .card-footer {
            background-color: transparent;
            border-top: 1px solid #444;
        }

        .card-title i {
            color: #0d6efd;
        }

        .btn-primary {
            background: linear-gradient(to right, #0d6efd, #007bff);
            border: none;
            transition: background 0.4s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(to right, #0056d2, #0051c2);
        }

        /* Estilo da barra de busca moderna */
        .search-section {
            background: linear-gradient(to right, #1f1f1f, #2c2c2c);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
        }

        .search-box {
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 15px 50px 15px 20px;
            border-radius: 50px;
            border: 1px solid #444;
            background-color: #2a2a2a;
            color: #fff;
            transition: 0.3s;
        }

        .search-box input:focus {
            outline: none;
            border-color: #0d6efd;
            box-shadow: 0 0 10px #0d6efd50;
        }

        .search-box .fa-search {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
            font-size: 20px;
            transition: color 0.3s;
        }

        .search-box input:focus + .fa-search {
            color: #0d6efd;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Navbar colapsável -->
    <div class="collapse" id="navbarToggleExternalContent">
        <div class="bg-dark p-4">
            <h5 class="text-white">Menu</h5>
            <ul class="nav nav-underline">
                <li class="nav-item">
                    <a class="nav-link active" href="Home.html">Início</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/Relatar">Relatar Problema</a>
                </li>     
                <li class="nav-item">
                    <a class="nav-link active" href="/RotasDoBanco">Lista Onibus Capelinha</a>
                </li>                           
                <li class="nav-item">
                    <a class="nav-link" href="PaginaRota.html">Rotas de Ônibus</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="horarios.html">Horários</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="olho-vivo.html">Câmeras Olho Vivo</a>
                </li>
            </ul>
        </div>
    </div>
<!-- barra de pesquisa -->
<div class="container my-5">
    <div class="search-section">
        <p>Pesquisa da linha do ônibus</p>
        <form action="/pesquisar_linha" method="post" class="search-box">
            <input type="text" name="linha" placeholder="Digite o número da linha...">
            <i class="fas fa-search"></i>
        </form>
    </div>
</div>
<!-- Resultados da busca (cards) -->
{{#if dados.length}}
<div class="container my-5">
    <div class="row g-4">
        {{#each dados}}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Linha {{lt}} - {{tl}} <i class="fas fa-bus"></i></h5>
                    <p class="card-text">
                        <strong>Código CL:</strong> {{cl}}<br>
                        <strong>Sentido:</strong> {{tp}}<br>
                        <strong>Destino:</strong> {{ts}}<br>
                        <strong>Operação Circular:</strong> {{#if lc}}Sim{{else}}Não{{/if}}
                    </p>
                </div>
                <div class="card-footer text-end">
                    <a href="/hora_saida/{{cl}}" class="btn btn-primary">Detalhes</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}
<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Linha - 6007-10 <i class="fas fa-bus"></i></h5>
                    <p class="card-text">
                        <strong>Código CL:</strong> {{cl}}<br>
                        <strong>Sentido:</strong> Terminal Santo Amaro<br>
                        <strong>Destino:</strong> Terminal Capelinha <br>
                        <strong>Operação Circular:</strong> não <br>
                    </p>
                </div>
                <div class="card-footer text-end">
                    <a href="/linha/{{cl}}" class="btn btn-primary">Detalhes</a>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}

